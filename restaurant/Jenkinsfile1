pipeline {
    agent any

    environment {
        MAVEN_HOME = '/usr/share/maven'
        SONAR_HOST_URL = 'http://localhost:9000'
        SONAR_PROJECT_KEY = 'retaurant'
        NEXUS_URL = 'http://localhost:8081/repository/maven-releases/'
        NEXUS_REPOSITORY = 'deploymentRepo'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/hatemboudabra/Restaurant.git'
            }
        }

        stage('Build') {
            steps {
                dir('restaurant') {
                    script {
                        sh "${MAVEN_HOME}/bin/mvn clean install"
                    }
                }
            }
        }

        stage('Test') {
            steps {
                dir('restaurant') {
                    script {
                        sh "${MAVEN_HOME}/bin/mvn test"
                    }
                }
            }
            post {
                always {
                    junit 'restaurant/target/surefire-reports/*.xml'
                }
                success {
                    echo 'All unit tests passed!'
                }
                failure {
                    echo 'Some unit tests failed.'
                }
            }
        }

        stage('Run SonarQube Analysis') {
            steps {
                dir('restaurant') {
                    withCredentials([string(credentialsId: 'SonarQubeToken', variable: 'SONAR_TOKEN')]) {
                        script {
                            sh "${MAVEN_HOME}/bin/mvn sonar:sonar -Dsonar.projectKey=${SONAR_PROJECT_KEY} -Dsonar.host.url=${SONAR_HOST_URL} -Dsonar.login=${SONAR_TOKEN}"
                        }
                    }
                }
            }
        }

        stage('Publish Code Coverage') {
            steps {
                dir('restaurant') {
                    script {
                        sh "${MAVEN_HOME}/bin/mvn jacoco:report"
                    }
                }
            }
            post {
                success {
                    archiveArtifacts artifacts: 'restaurant/target/site/jacoco/*.html', allowEmptyArchive: true
                }
            }
        }

        stage('Upload to Nexus') {
            steps {
                dir('restaurant') {
                    script {
                        sh """
                            ${MAVEN_HOME}/bin/mvn deploy:deploy-file \
                            -DrepositoryId=${NEXUS_REPOSITORY} \
                            -Durl=${NEXUS_URL} \
                            -Dfile=target/your-artifact.jar \
                            -DgroupId=com.example \
                            -DartifactId=restaurant \
                            -Dversion=1.0.0 \
                            -Dpackaging=jar
                        """
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
